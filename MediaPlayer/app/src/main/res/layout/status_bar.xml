<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="@drawable/background_item_music">

    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="72dp"
        android:background="@drawable/backgroud_notification"
        android:orientation="vertical"
     >

            <TextView
                android:id="@+id/tv_name_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="4sp"
                android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
           >
            <ImageButton
                android:id="@+id/status_bar_previous"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/previos"
                android:contentDescription="Previous" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:background="#9E9E9E"
                android:layout_marginRight="8dp"/>
            <ImageButton
                android:id="@+id/status_bar_play"
                android:layout_width="32dp"

                android:layout_height="32dp"
                android:background="@drawable/pause"
                android:contentDescription="Play and pause" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#9E9E9E"/>
            <ImageButton
                android:id="@+id/status_bar_next"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/next"
                android:contentDescription="Skip forwards" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/status_bar_collapse"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_cancel_red_200_24dp" />
</LinearLayout>